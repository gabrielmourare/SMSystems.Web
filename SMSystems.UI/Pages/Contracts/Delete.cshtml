@page
@model SMSystems.UI.Pages.Contracts.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h4>Tem certeza que quer deletar este contrato?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.SessionValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.SessionValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.StartDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Contract.ID" />
        <div class="mb-2 w-100">
            <button type="submit" class="btn btn-danger w-100 w-md-auto">Deletar</button>
        </div>
        <div class="mb-2 w-100">
            <a class="btn btn-secondary w-100 w-md-auto" asp-page="Index">Voltar</a>
        </div>
    </form>
</div>
