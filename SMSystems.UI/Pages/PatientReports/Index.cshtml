@page
@model SMSystems.UI.Pages.PatientReports.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>
    Prontuários
</h4>
<div class="row justify-content-center mb-3">
    <div class="col-md-6 col-sm-12 mb-2">
        <div class="mb-2 w-100">
            <a asp-page="Create" class="btn btn-primary w-100 w-md-auto" asp-route-patientId="@Model.Patient.ID">Registrar Novo</a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Nome do Paciente
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientReport[0].ReportDate)
                </th>

                <th class="text-center">
                    Editar
                </th>

                <th class="text-center">
                    Excluir
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PatientReport)
            {
                <tr>
                    <td>
                        @Model.PatientName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportDate)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="me-2">
                                <img src="~/css/Icons/edit.png" alt="Editar" width="25" height="25" />
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Delete" asp-route-id="@item.ID">
                                <img src="~/css/Icons/delete.png" alt="Deletar" width="25" height="25" />
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>