@page
@model SMSystems.UI.Pages.Patients.IndexModel

@{
    ViewData["Title"] = "Pacientes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    table {
        width: 100%;
        border-spacing: 0; /* Remove o espaçamento entre as células */
    }

    td {
        padding: 5px;
        text-align: left;
        vertical-align: middle; /* Garante que os itens dentro dos td fiquem alinhados no meio verticalmente */
    }

    form {
        margin: 0;
        padding: 0;
        width: 100%; /* Garante que o form ocupe todo o espaço disponível no td */
        display: flex;
        align-items: center; /* Alinha os itens no centro do form */
    }

    /* Classe que alinha o botão na segunda célula à direita */
    .right-align {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }
</style>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <form>
                        <p>
                            <input id="searchBar" type="text" asp-for="SearchString" />
                            <input type="submit" class="btn btn-primary" value="Buscar" />
                        </p>
                    </form>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-page="Create">Cadastrar Novo</a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Patients[0].ID)
                    </th>
                    <th class="fixed-column">
                        @Html.DisplayNameFor(model => model.Patients[0].Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Patients[0].Active)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patients[0].BirthDate)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Patients)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td class="fixed-column">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>

                        <td>
                            <div class="col-sm-6">
                                <a asp-page="./Edit" asp-route-id="@item.ID"><img src="~/css/Icons/edit.png" alt="Editar" width="32" height="32" /></a> |



                                <a asp-page="./Details" asp-route-id="@item.ID"> <img src="~/css/Icons/details.png" alt="Detalhes" width="32" height="32" /></a> |


                                <a asp-page="./Delete" asp-route-id="@item.ID">  <img src="~/css/Icons/delete.png" alt="Deletar" width="32" height="32" /></a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


