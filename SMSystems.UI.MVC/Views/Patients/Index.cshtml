@page
@model SMSystems.UI.MVC.ViewModels.PatientViewModel

@{
    ViewBag.Title = "Patient List";
    var patients = ViewBag.Patients as List<SMSystems.Domain.Entities.Patient>;
}


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form>
                <p>
                    <input id="searchBar" type="text" asp-for="SearchString" />
                    <input type="submit" class="btn btn-primary" value="Buscar" />
                </p>
            </form>
        </div>

        <div class="col-md-4 ml-auto">
            <a class="btn btn-primary float-right" asp-page="Create">Cadastrar Novo</a>
        </div>
    </div>
</div>


<div class="container" style="max-height:600px; overflow-y:scroll;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].ID)
                </th>
                <th class="fixed-column">
                    @Html.DisplayNameFor(model => model.Patients[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].BirthDate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Patients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td class="fixed-column">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID"><img src="~/css/Icons/edit.png" alt="Editar" width="32" height="32" /></a> |
                        <a asp-page="./Details" asp-route-id="@item.ID"> <img src="~/css/Icons/details.png" alt="Detalhes" width="32" height="32" /></a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">  <img src="~/css/Icons/delete.png" alt="Deletar" width="32" height="32" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
